{% extends 'base.html.twig' %}

{% block title %}Categories :
	{{ nom }}
{% endblock %}

{% block body %}
	<h1>Catégorie :
		{{ nom }}</h1>
	<div>
		{% for j in job %}
			<div class="card mb-3">
				<div class="row">
					<div class="col-md-4">
						<img src="{{ j.logo }}" class="card-img" alt="{{ j.logo }}">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<p class="card-text">{{ j.entreprise }}</p>
							<h5 class="card-title">{{ j.contrat }}</h5>

							<p class="card-text">{{ j.lieu }}
								-
								{{ j.pays }}
							</p>
							<a href="{{ path('job_show',{'categorie_nom': j.category.nom, 'idjob': j.id})}}" class="btn btn-primary btn-sm">
								<i class="fas fa-search fa-1x">
									Détails</i>
							</a>


						</div>
					</div>
				</div>
			</div>

		{% endfor %}
		{{ knp_pagination_render(job) }}
	</div>
{% endblock %}
