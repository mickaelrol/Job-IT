{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	{% for c in categs %}
		<div>

			<h2>
				<a href="{{ path('categories')}}?nom={{ c }}">{{ c }}</a>
			</h2>
			{% for j in job %}
				{% if j.category.nom == c %}
					<div class="card mb-3">
						<div class="row">
							<div class="col-md-4">
								<img src="{{ j.logo }}" class="card-img" alt="{{ j.logo }}">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<p class="card-text">{{ j.entreprise }}</p>
									<h5 class="card-title">{{ j.contrat }}</h5>

									<p class="card-text">{{ j.lieu }}
										-
										{{ j.pays }}
									</p>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>


	{% endfor %}

{% endblock %}
