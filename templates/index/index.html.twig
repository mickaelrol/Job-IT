{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	{% for c in categs %}
		<div>

			<h2>
				<a href="{{ path('jobs_categories',{ 'nom' : c['nom']} ) }}">{{ c['nom'] }}</a>
			</h2>
			{% for j in job %}
				{% if j.category.id == c['id'] %}
					<div class="card mb-3">
						<div class="row">
							<div class="col-md-4">
								<img src="{{ j.logo }}" class="card-img" alt="{{ j.logo }}">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<p class="card-text">{{ j.entreprise }}</p>
									<h5 class="card-title">{{ j.contrat }}</h5>

									<p class="card-text">{{ j.lieu }}
										-
										{{ j.pays }}
									</p>
									<a href="{{ path('job_show',{'categorie_nom': c['nom'], 'idjob': j.id})}}" class="btn btn-primary btn-sm">
										<i class="fas fa-search fa-1x">
											DÃ©tails</i>
									</a>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>


	{% endfor %}

{% endblock %}
